{
  "name": "wombat-rules",
  "version": "0.1.0",
  "description": "TypeScript wrapper around JSONLogic for evaluating business rules in Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --noEmit",
    "prepublish": "npm run typecheck && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "jsonlogic",
    "rules-engine",
    "cloudflare-workers",
    "typescript",
    "business-rules"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/json-logic-js": "^2.0.8",
    "json-logic-js": "^2.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
